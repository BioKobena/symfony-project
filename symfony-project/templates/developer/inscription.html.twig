{% extends 'navbarDev.html.twig' %}
{% block title %}Dashboard Développeur
{% endblock %}

{% block body %}
	<div class="site-section bg-light d-flex justify-content-center align-items-center min-vh-100">
		<div class="register-card shadow p-4 rounded w-75 w-md-50 w-lg-40 bg-white">
			<h2 class="text-center mb-4 text-primary h4">Inscrivez-vous pour trouver votre voie avec AdopteUnDev</h2>
			{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.prenom) }}
					{{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Votre prénom'}}) }}
				</div>
			</div>

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.email) }}
					{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre e-mail'}}) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.localisation) }}
					{{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Votre localisation'}}) }}
				</div>
			</div>

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.password) }}
					{{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.confirmPassword) }}
					{{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre mot de passe'}}) }}
				</div>
			</div>

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.experience) }}
					{{ form_widget(form.experience, {'attr': {'class': 'form-control', 'placeholder': 'Ex : 3 (sur 5)', 'min': 1, 'max': 5}}) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.salaire_min) }}
					{{ form_widget(form.salaire_min, {'attr': {'class': 'form-control', 'placeholder': 'Ex : 40000'}}) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.languages) }}
				{{ form_widget(form.languages, {
        'attr': {
            'class': 'form-control', 
            'placeholder': 'Sélectionnez vos langages de programmation'
        }
    }) }}
			</div>


			<div class="form-group">
				{{ form_label(form.bio) }}
				{{ form_widget(form.bio, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Décrivez-vous brièvement'}}) }}
			</div>

			<div class="form-group">
				{{ form_label(form.avatar) }}
				{{ form_widget(form.avatar, {'attr': {'class': 'form-control-file'}}) }}
				<small class="form-text text-muted">Formats acceptés : JPG, PNG, GIF.</small>
			</div>

			<button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
			<p class="text-center mt-3">
				Déjà un compte ?
				<a href="{{ path('app_developer_login') }}">Se connecter</a>
			</p>
			{{ form_end(form) }}
		</div>

	</div>
{% endblock %}
