{% extends 'base.html.twig' %}
{% block title %}Inscriptioin entreprise
{% endblock %}

{% block body %}


	<div class="section-grey bg-light" id="blog-section" style="display:flex; flex-direction:column; justify-content:center; align-items:center; width:100vw ; padding:3rem; margin-top:5rem">
		<div class="register-card bg-white shadow p-4 rounded w-75 w-md-50 w-lg-40">
			<h2 class="text-center mb-4 text-primary h4">Inscrivez votre entreprise sur AdopteUnDev</h2>

			{{ form_start(form) }}

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.nom) }}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
					{{ form_errors(form.nom) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.localisation) }}
					{{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'placeholder': 'Votre localisation'}}) }}
					{{ form_errors(form.localisation) }}
				</div>
			</div>

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.email) }}
					{{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre e-mail'}}) }}
					{{ form_errors(form.email) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.password) }}
					{{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
					{{ form_errors(form.password) }}
				</div>
				<div class="col-md-6 form-group">
					{{ form_label(form.confirmPassword) }}
					{{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre mot de passe'}}) }}
					{{ form_errors(form.confirmPassword) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.description) }}
				{{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Décrivez brièvement votre entreprise'}}) }}
				{{ form_errors(form.description) }}
			</div>

			<div class="form-row">
				<div class="col-md-6 form-group">
					{{ form_label(form.taille_entreprise) }}
					{{ form_widget(form.taille_entreprise, {'attr': {'class': 'form-control', 'placeholder': 'Ex : 10-50 employés'}}) }}
					{{ form_errors(form.taille_entreprise) }}
				</div>

				<div class="col-md-6 form-group">
					{{ form_label(form.secteur) }}
					{{ form_widget(form.secteur, {'attr': {'class': 'form-control', 'placeholder': 'Votre secteur d\'activité'}}) }}
                {{ form_errors(form.secteur) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.type_entreprise) }}
            {{ form_widget(form.type_entreprise, {'attr': {'class': 'form-control', 'placeholder': 'Ex : Start-up, PME, Multinationale'}}) }}
            {{ form_errors(form.type_entreprise) }}
        </div>

			<div class="form-group">
					{{ form_label(form.avatar) }}
					{{ form_widget(form.avatar, {'attr': {'class': 'form-control-file'}}) }}
					<small class="form-text text-muted">Formats acceptés : JPG, PNG, GIF.</small>
				</div>

        <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>

        {{ form_end(form) }}

					<p class="text-center mt-3">
						Déjà un compte ?
						<a href="{{ path('app_company_login') }}">Se connecter</a>
					</p>
				</div>
			</div>
		{% endblock %}
