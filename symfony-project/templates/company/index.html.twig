{% extends 'base.html.twig' %}
{% block title %}Dashboard Company
{% endblock %}

{% block body %}


	<div class="hero-slant overlay" data-stellar-background-ratio="0.5" style="background-image: url(https://img.freepik.com/free-vector/recruitment-concept-illustration_114360-24595.jpg?ga=GA1.1.73765508.1719503126&semt=ais_hybrid)">

		<div class="container">

			<div class="row align-items-center justify-content-between">

				<div class="col-lg-7 intro">
					{% if company %}
						<h2 class="text-black font-weight-bold mb-4" data-aos="fade-up" data-aos-delay="0">
							Bienvenue
							{{ company.nom }}
						</h2>
					{% endif %}
					<h1 class="text-white font-weight-bold mb-4" data-aos="fade-up" data-aos-delay="0">
						Découvrez vos futurs collaborateurs.</h1>
					<p class="text-white mb-4" data-aos="fade-up" data-aos-delay="100">Nous vous connectons à vos futurs talents pour des innovations plus accentuées.</p>

				</div>
			</div>

		</div>


		<div class="slant" style="background-image: url('images/slant.svg');"></div>
	</div>

	<div class="py-3">
		<div class="container">

			<div class="owl-logos owl-carousel">
				<div class="item">
					<img src="images/logo-puma.png" alt="Image" class="img-fluid">
				</div>
				<div class="item">
					<img src="images/logo-adobe.png" alt="Image" class="img-fluid">
				</div>
				<div class="item">
					<img src="images/logo-google.png" alt="Image" class="img-fluid">
				</div>
				<div class="item">
					<img src="images/logo-paypal.png" alt="Image" class="img-fluid">
				</div>
				<div class="item">
					<img src="images/logo-adobe.png" alt="Image" class="img-fluid">
				</div>
				<div class="item">
					<img src="images/logo-google.png" alt="Image" class="img-fluid">
				</div>
			</div>
		</div>

	</div>

	<div class="container mt-5">
		<div class="row text-center mb-5">
			<h2 class="font-weight-bold">Les derniers profils créés</h2>
			<p class="text-muted w-100 font-weight-bold">Découvrez les talents récemment inscrits</p>
		</div>
		<div class="row">
			{% for developer in developers %}
				<div class="col-md-6 col-lg-4 mb-4">
					<div class="card shadow-sm position-relative">
						<div class="position-relative top-0 end-0 p-3">
							{% if app.session.get('user_id') is not empty %}

								{% if developer %}
									<img src="{{ asset('uploads/photos/' ~ developer.avatar) }}" alt="Image" class="rounded-circle border" style="width: 60px; height: 60px; object-fit: cover;">
								{% endif %}
							{% else %}
								<img src="{{'https://via.placeholder.com/150'}}" alt="Profil Avatar">
							{% endif %}
						</div>
						<div class="card-body">
							<h5 class="card-title">{{ developer.nom }}</h5>
							<p class="card-text">
								{{ developer.bio }}
								<br>
								{{ developer.experience }}
								ans d'expérience
							</p>
							<a href="{{ path('developer_detail', {id: developer.id}) }}" class="btn btn-primary text-white btn-sm">
								Voir le profil
							</a>
						</div>
					</div>
				</div>
			{% else %}
				<li class="list-group-item text-center">
					Aucun développeur inscrit
				</li>
			{% endfor %}
		</div>

	</div>

	<div class="site-section bg-light" id="profiles-section">
		<div class="container">
			<div class="row text-center mb-5">
				<h2 class="font-weight-bold">Profils les plus consultés</h2>
				<p class="text-muted w-100 font-weight-bold">Découvrez les plus attirants</p>
			</div>
			<div class="row">
				{% for developer in mostConsulted %}
					<div class="col-md-6 col-lg-4 mb-4">
						<div class="card shadow-sm position-relative">
							<div class="position-relative top-0 end-0 p-3">
								{% if app.session.get('user_id') is not empty %}

									{% if developer %}
										<img src="{{ asset('uploads/photos/' ~ developer.avatar) }}" alt="Image" class="rounded-circle border" style="width: 60px; height: 60px; object-fit: cover;">
									{% endif %}
								{% else %}
									<img src="{{'https://via.placeholder.com/150'}}" alt="Profil Avatar">
								{% endif %}
							</div>
							<div class="card-body">
								<h5 class="card-title">{{ developer.nom }}</h5>
								<p class="card-text">
									{{ developer.bio }}
									<br>
									{{ developer.experience }}
									ans d'expérience
								</p>
								<a href="{{ path('developer_detail', {id: developer.id}) }}" class="btn btn-primary text-white btn-sm">
									Voir le profil
								</a>
							</div>
						</div>
					</div>
				{% else %}
					<li class="list-group-item text-center">
						Aucun développeur inscrit
					</li>
				{% endfor %}
			</div>
			<div class="row mt-5">
				<div class="col-lg-4 mx-auto">
					<a href="" class="btn btn-primary btn-block">Voir tous les profils</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
