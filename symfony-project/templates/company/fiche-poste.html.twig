{% extends 'base.html.twig' %}
{% block title %}Fiche de poste
{% endblock %}

{% block body %}

		<div class="register-container d-flex justify-content-center align-items-center" style="margin-top:10rem;">
			<div class="register-card shadow p-4 rounded">
				<h2 class="text-center mb-4">Créer une fiche de poste</h2>
				<form
					action="/create-job-post" method="POST">
					<!-- Titre du poste -->
					<div class="form-group">
						<label for="jobTitle">Titre du poste :</label>
						<input type="text" id="jobTitle" name="jobTitle" class="form-control" placeholder="Ex : Développeur Full-Stack" required>
					</div>

					<!-- Localisation -->
					<div class="form-group">
						<label for="location">Localisation :</label>
						<input type="text" id="location" name="location" class="form-control" placeholder="Ex : Paris, Lyon, à distance" required>
					</div>

					<!-- Technologies recherchées -->
					<div class="form-group">
						<label for="technologies">Technologies recherchées :</label>
						<select id="technologies" name="technologies[]" class="form-control" multiple required>
							<option value="python">Python</option>
							<option value="javascript">JavaScript</option>
							<option value="java">Java</option>
							<option value="php">PHP</option>
							<option value="csharp">C#</option>
							<option value="html-css">HTML/CSS</option>
							<option value="sql">SQL</option>
						</select>
						<small class="form-text text-muted">Maintenez la touche Ctrl (ou Command sur Mac) pour sélectionner plusieurs.</small>
					</div>

					<!-- Niveau d'expérience requis -->
					<div class="form-group">
						<label for="experience">Niveau d'expérience requis (en années) :</label>
						<input type="number" id="experience" name="experience" class="form-control" placeholder="Ex : 2" min="0" required>
					</div>

					<!-- Salaire proposé -->
					<div class="form-group">
						<label for="salary">Salaire proposé (en €) :</label>
						<input type="number" id="salary" name="salary" class="form-control" placeholder="Ex : 45000" required>
					</div>

					<!-- Description détaillée -->
					<div class="form-group">
						<label for="description">Description détaillée :</label>
						<textarea id="description" name="description" class="form-control" rows="5" placeholder="Détaillez les responsabilités, les compétences nécessaires, et les avantages proposés." required></textarea>
					</div>

					<!-- Bouton de soumission -->
					<button type="submit" class="btn btn-primary btn-block">Créer la fiche de poste</button>
				</form>
			</div>
		</div>
{% endblock %}
		