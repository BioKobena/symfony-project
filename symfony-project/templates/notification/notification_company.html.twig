{% extends 'base.html.twig' %}
{% block title %}Matching Company
{% endblock %}

{% block body %}

		<div class="section-grey bg-light" id="blog-section" style="display:flex; flex-direction:column; justify-content:center; align-items:center; width:100vw ; padding:3rem; margin-top:5rem">
			<div class="container">
				<div class="row">
					<h2 class="font-weight-bold text-center text-primary">Vos notifications
						{{company.nom}}

					</h2>
				</div>
				<div class="container">
					<ul class="list-group">

						{% for notification in notifications %}
							<li class="list-group-item d-flex justify-content-between align-items-center">
								<div>
									<strong>{{ notification.message }}</strong><br>
								</div>
								<a href="{{ path('developer_detail', {'id': notification.job.id}) }}" class="btn btn-primary btn-sm">
									Voir le profil
								</a>
							</li>
						{% else %}
							<li class="list-group-item text-center">
								Aucune notification pour le moment.
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	{% endblock %}